<link href="//cdn.bootcss.com/codemirror/5.25.0/codemirror.min.css" rel="stylesheet">
<link href="//cdn.bootcss.com/codemirror/5.25.0/theme/monokai.min.css" rel="stylesheet">
<link href="//cdn.bootcss.com/codemirror/5.25.0/addon/lint/lint.min.css" rel="stylesheet">

<script>
    window.__state__ = {
        challengeType:{{challenge.challengeType}},
        tests:{{{json tests}}},
    }
</script>

<div class="container-fluid" style="margin: 10px 0">
    <div class="row">
        <div class="col-md-3 col-lg-3">
            <div id="scroll-locker" class="scroll-locker" style="min-height: 306px; height: 800px;">
                <div style="width: 99%; min-height: 1000px;" class="innerMarginFix">
                    <div class="row">
                        <div class="col-xs-12"><h4
                            class="text-center challenge-instructions-title">{{challenge.title}}</h4>
                            <hr>
                            <div class="challenge-instructions">
                                {{#each challenge.description}}
                                    <p class="wrappable">{{{this}}}</p>
                                {{/each}}
                                <div class="negative-bottom-margin-30"></div>
                            </div>
                        </div>
                    </div>
                    <div class="button-spacer"></div>
                    <button id="submitButton" class="btn-big btn btn-success btn-block">Run tests
                    </button>
                    <div class="button-spacer"></div>
                    <div class="button-spacer"></div>
                    {{#if challenge.challengeType}}
                    <div class="output-view">
                        <textarea id="output" autofocus=""  name="output" style="display: none;">
                            /**
                                * Your output will go here.
                                * Any console.log() statements
                                * will appear in here as well.
                            */
                        </textarea>
                    </div>
                    {{/if}}
                    <div class="button-spacer"></div>
                    <div id="testSuite">
                        {{#each tests }}
                            <div class="row">
                                <div class="col-xs-2 text-center">
                                    <i class="glyphicon glyphicon-remove" style="color:red"></i>
                                </div>
                                <div class="col-xs-10 test-output">
                                    {{{this.text}}}
                                </div>
                                <div class="ten-pixel-break"></div>
                            </div>
                        {{/each}}
                    </div>
                    <br>
                    </div>
            </div>
            <div class="button-spacer"></div>
        </div>
        {{#if challenge.challengeType}}
        <div class="col-md-9 col-lg-9">
            <div class="editorScrollDiv">
                <div id="mainEditorPanel">
                    <form class="code">
                        <div class="codeMirrorView">
                            <textarea id="code" autofocus=""  name="code" style="display: none;">{{#each challenge.challengeSeed}}{{this}}&#10;{{/each}}</textarea>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        <iframe frameborder="0" id="preview" class="iphone" style="display:none"></iframe>
        {{else}}
        <div class="col-md-5 col-lg-6">
            <div class="editorScrollDiv">
                <div id="mainEditorPanel">
                    <form class="code">
                        <div class="codeMirrorView">
                            <textarea id="code" autofocus=""  name="code" style="display: none;">{{#each challenge.challengeSeed}}{{this}}&#10;{{/each}}</textarea>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        <div class="col-md-4 col-lg-3">
            <div class="panel panel-default">
                <div class="panel-body preview text-center">
                    <iframe frameborder="0" id="preview" class="iphone"></iframe>
                </div>
            </div>
        </div>
        {{/if}}

    </div>
</div>

<script src="//cdn.bootcss.com/jshint/2.9.4/jshint.min.js"></script>
<script src="//cdn.bootcss.com/chai/4.0.0-canary.1/chai.min.js"></script>

<script src="//cdn.bootcss.com/codemirror/5.25.0/codemirror.min.js"></script>
<script src="//cdn.bootcss.com/codemirror/5.25.0/addon/comment/comment.min.js"></script>
<script src="//cdn.bootcss.com/codemirror/5.25.0/addon/edit/closebrackets.min.js"></script>
<script src="//cdn.bootcss.com/codemirror/5.25.0/addon/edit/matchbrackets.min.js"></script>
<script src="//cdn.bootcss.com/codemirror/5.25.0/addon/lint/lint.min.js"></script>
<script src="//cdn.bootcss.com/codemirror/5.25.0/addon/lint/javascript-lint.min.js"></script>
<script src="//cdn.bootcss.com/codemirror/5.25.0/mode/javascript/javascript.min.js"></script>
<script src="//cdn.bootcss.com/codemirror/5.25.0/mode/xml/xml.min.js"></script>
<script src="//cdn.bootcss.com/codemirror/5.25.0/mode/css/css.min.js"></script>
